<div style="display:grid; grid-template-columns: auto min-content min-content; gap: 10px; align-items: center;">
    <div><h1>Bixes cadastrados</h1></div>
    <div>
        <%= link_to 'Novo bixe', new_bixe_path, class: 'btn btn-success btn-lg' %>
    </div>
    <div>
        <%= link_to 'Exportar CSV', bixes_path("csv"), class: 'btn btn-primary btn-lg' %>
    </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">NºBixe</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Telefone</th>
      <th scope="col">Curso</th>
      <th scope="col">Time</th>
      <th scope="col">Con. Emerg.</th>
      <th scope="col">Alerg.</th>
    </tr>
  </thead>
  <tbody>
  <% @bixes.each_with_index do |b, i| %>
    <tr>
      <th scope="row"><%= b.id %></th>
      <td><%= link_to b.nome, bixe_path(b) %></td>
      <td><%= b.email %></td>
      <td><%= b.telefone %></td>
      <td><%= b.curso %></td>
      <td>
          <% if b.confirmed? %>
        <div class="team-<%= b.confirmacao.team %>">
            <span><%= b.confirmacao.team.titleize %></span>
        </div>
          <% else %>
          <div class="team-unknown">
            <span>Não confirmado</span>
          </div>
        <% end %>
      </td>
      <td><%= b.emergency_contacts %></td>
      <td><%= b.sensitivities %></td>
    </tr>
  <% end %>
  </tbody>
</table>
