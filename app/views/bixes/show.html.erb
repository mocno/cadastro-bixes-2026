<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h2>Dados pessoais</h2>
    <div>
      <h4>Número de Bixe</h4>
      <span><%= @bixe.id %></span>
    </div>
    <div>
      <h4>Nome</h4>
      <span><%= @bixe.nome %></span>
    </div>
    <div>
      <h4>Email</h4>
      <span><%= @bixe.email.present? ? @bixe.email : 'Não informado' %></span>
    </div>
    <div>
      <h4>Telefone</h4>
      <span><%= @bixe.telefone.present? ? @bixe.telefone : 'Não informado' %></span>
    </div>
    <div>
      <h4>Curso</h4>
      <span><%= @bixe.curso %></span>
    </div>
    <div>
      <h4>Contatos de Emergencia</h4>
      <span><%= @bixe.emergency_contacts.present? ? @bixe.emergency_contacts : 'Não informado' %></span>
    </div>
    <div>
      <h4>Sensibilidades e Alergias</h4>
      <span><%= @bixe.sensitivities.present? ? @bixe.sensitivities : 'Não informado' %></span>
    </div>
    <div>
      <h4>Equipe</h4>
      <% if @bixe.confirmed? %>
      <div class="team-<%= @bixe.team %>">
          <span><%= @bixe.team %></span>
      </div>
      <% else %>
      <span>Bixe não confirmade</span>
      <% end %>
    </div>
  </div>
</div>

<div class="row lil-top-margin">
  <div class="col-md-offset-3 col-md-2 col-xs-4">
    <div class="actions">
      <%= link_to 'Voltar à lista', bixes_path, class: 'btn btn-danger btn-lg btn-wide' %>
    </div>
  </div>
  <% if @bixe.confirmed? %>
    <div class="col-md-2 col-xs-4">
      <div class="actions">
          <%= button_to "Desconfirmar", destroy_confirmacoes_bixe_path(@bixe), method: :delete, class: 'btn btn-warning btn-lg btn-wide' %>
      </div>
    </div>
  <% else %>
  <div class="col-md-2 col-xs-4">
    <div class="actions">
        <%= button_to "Confirmar", create_confirmacoes_path(@bixe), method: :post, class: 'btn btn-primary btn-lg btn-wide' %>
    </div>
  </div>
  <% end %>
  <div class="col-md-2 col-xs-4">
    <div class="actions">
      <%= link_to 'Editar', edit_bixe_path(@bixe), method: :put, class: 'btn btn-success btn-lg btn-wide' %>
    </div>
  </div>
</div>
