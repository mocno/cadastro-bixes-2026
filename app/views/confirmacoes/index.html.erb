<div class="col-md-6">
  <h1>Bixes n√£o confirmados</h1>

  <div class="grid">
    <% @non_confirmed.each_with_index do |b, i| %>
      <div class="row list-item-<%= i % 2 %>">
        <h4>
          <%= button_to b.nome, "/bixes/#{b.id}/confirmacoes", method: :post %>
        </h4>
      </div>
    <% end %>
  </div>
</div>
<div class="col-md-6">
  <h1>Bixos confirmados</h1>

  <div class="grid">
    <% @bixes_by_team.each_with_index do |(team, bixes), i| %>
      <h2>Time: <%= team %></h2>
      <% bixes.each_with_index do |b, i| %>
        <div class="row team-<%= b.team %> team-container">
            <div class="col team-infos">
            <%= link_to "#{b.nome}", bixe_path(b.id) %>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
