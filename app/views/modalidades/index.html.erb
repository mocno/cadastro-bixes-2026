<h1>Modalidades da AAAMat</h1>

<div class="row lil-top-margin">
  <div class="col-xs-6 col-xs-offset-6 col-md-2 col-md-offset-10">
    <%= link_to 'Nova Modalidade', new_modalidade_path, class: 'btn btn-success btn-lg' %>
  </div>
</div>

<!-- Campo de busca -->
<div class="row">
  <div class="col-md-6">
<%= form_with url: modalidades_path, method: :get, local: true do |form| %>
  <div class="input-group">
    <%= form.text_field :search, value: params[:search], class: "form-control", placeholder: "Buscar modalidade..." %>
    <span class="input-group-btn">
      <%= form.submit "Buscar", class: "btn btn-primary" %>
    </span>
  </div>
<% end %>

  </div>
</div>

<div class="grid">
  <% @modalidades.each_with_index do |m, i| %>
    <div class="row list-item-<%= i % 2 %>">
      <%= link_to modalidade_path(m.id) do %>
        <h4>
          <div class="col-md-4 col-xs-6">
            <%= m.nome %>
          </div>
        </h4>
      <% end %>
    </div>
  <% end %>
</div>
