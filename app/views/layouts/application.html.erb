<!DOCTYPE html>
<html>
  <head>
    <title>Cadastro bixes IME-USP</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolink-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolink-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

  <body>
    <div class="banner">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= link_to tutorial_path, style: 'color: #fff' do %>
            <h1>Cadastro dos Bixes</h1>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <%= flash_messages %>

      <ul class="nav nav-tabs">
        <li<% if tutorial_index? %> class='active'<% end %>>
          <%= link_to 'tutorial', tutorial_path %>
        </li>
        <li<% if bixes_index? %> class='active'<% end %>>
          <%= link_to 'bixes', bixes_path %>
        </li>
        <li<% if confirmacoes_index? %> class='active'<% end %>>
          <%= link_to 'confirmações', confirmacoes_path %>
        </li>
      </ul>

      <%= yield %>
    </div>
  </body>
</html>
